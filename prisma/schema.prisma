generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Kanji {
  id        Int      @id @default(autoincrement())
  kanji     String   @unique
  strokes   Int
  reading   String
  kanji_en  String
  kanji_es  String
  on        String
  kun       String
  jlpt      Int
  words     Word[]
}

model Word {
  id          Int    @id @default(autoincrement())
  word_en     String
  word_es     String
  reading     String
  kanji       String
  jlpt        Int
  kanjiId     Int
  Kanji       Kanji  @relation(fields: [kanjiId], references: [id])
  sentences    Sentence[]
}

model Sentence {
  id         Int    @id @default(autoincrement())
  sentence   String
  furigana   String
  sentence_es String
  sentence_en String
  word       Word   @relation(fields: [wordId], references: [id])
  wordId     Int
}